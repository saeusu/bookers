<p id="notice"><%= flash[:notice] %></p>
<h1>Books</h1>
<%= form_with model: @book, url: books_path, method: :post do |f| %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="show_id" href="/books/<%= book.id %>">Show</a>
          </td>
          <td>
            <%= link_to 'Edit', edit_book_path(book) %>
          </td>
          <td>
            <a data-confirm="Are you sure?" class="destroy_id" rel="nofollow" data-method="delete" href="/books/<%= book.id %>">Destroy</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>

<% if @error_messages.present? %>
  <div id="error_explanation">
    <h3><%= pluralize(@error_messages.count, "error") %> prohibited this book from being saved:</h3>
    <ul>
      <% @error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>